{% extends 'base.html.twig' %}

{% block title %}Entreprise index
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="fw-bold">Liste des entreprises</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Designation</th>
					<th>Adresse</th>
					<th>Contact</th>
					<th>Email</th>
					<th>Partenaire</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for entreprise in entreprises %}
					<tr>
						<td>{{ entreprise.id }}</td>
						<td>{{ entreprise.designation }}</td>
						<td>{{ entreprise.adress }}</td>
						<td>{{ entreprise.contact }}</td>
						<td>{{ entreprise.email }}</td>
						<td>{{ entreprise.partener ? 'Oui' : 'Non' }}</td>
						<td>
							<a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}" class="btn btn-secondary">Voir</a>
							<a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-primary">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">Aucun enregistrement</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_entreprise_new') }}" class="btn btn-primary">Ajouter une nouvelle entreprise</a>
	</div>

{% endblock %}
