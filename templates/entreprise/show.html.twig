{% extends 'base.html.twig' %}

{% block title %}Entreprise
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
			{% if entreprise.logo %}
				<div class="col-md-3"><img src="{{ vich_uploader_asset(entreprise, 'imageFile')}}" alt="{{ entreprise.designation }}" style="width: 250px; height: 250px; border-radius: 50%;"></div>
			{% else %}
				<div class="col-md-3"><img src="/images/e3.jpg" alt="{{ entreprise.designation }}" style="width: 250px; height: 250px; border-radius: 50%;"></div>

			{% endif %}
			<div class="col-md-9">
				<h1 class="fw-bold">Informations</h1>

				<table class="table table-striped">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ entreprise.id }}</td>
						</tr>
						<tr>
							<th>Designation</th>
							<td>{{ entreprise.designation }}</td>
						</tr>
						<tr>
							<th>Adresse</th>
							<td>{{ entreprise.adress }}</td>
						</tr>
						<tr>
							<th>Contact</th>
							<td>{{ entreprise.contact }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ entreprise.email }}</td>
						</tr>
						<tr>
							<th>Latitude</th>
							<td>{{ entreprise.latitude }}</td>
						</tr>
						<tr>
							<th>Longitude</th>
							<td>{{ entreprise.longitude }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ entreprise.description }}</td>
						</tr>
						<tr>
							<th>Partenaire</th>
							<td>{{ entreprise.partener ? 'Oui' : 'Non' }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('app_entreprise_index') }}" class="btn btn-secondary">Retour Ã  la liste des entreprises</a>

				<a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-primary">Modifier</a>

				{{ include('entreprise/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

{% endblock %}
