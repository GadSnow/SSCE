{% extends 'base.html.twig' %}

{% block title %}Skill index
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="fw-bold">Liste des compétences</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Libellé</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for skill in skills %}
					<tr>
						<td>{{ skill.id }}</td>
						<td>{{ skill.label }}</td>
						<td>{{ skill.description }}</td>
						<td>
							<a href="{{ path('app_skill_show', {'id': skill.id}) }}" class="btn btn-secondary">Voir</a>
							<a href="{{ path('app_skill_edit', {'id': skill.id}) }}" class="btn btn-primary">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucun enregistrement</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_skill_new') }}" class="btn btn-primary">Ajouter une nouvelle compétence</a>
	</div>

{% endblock %}
