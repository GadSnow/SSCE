{% extends 'base.html.twig' %}

{% block title %}Skill
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="fw-bold">Informations</h1>

		<table class="table table-striped">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ skill.id }}</td>
				</tr>
				<tr>
					<th>Libellé</th>
					<td>{{ skill.label }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ skill.description }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_skill_index') }}" class="btn btn-secondary">Retour à la liste des spécialités</a>

		<a href="{{ path('app_skill_edit', {'id': skill.id}) }}" class="btn btn-primary">Modifier</a>

		{{ include('skill/_delete_form.html.twig') }}
	</div>

{% endblock %}
