{% extends 'base.html.twig' %}

{% block title %}Speciality
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="fw-bold">Infomations sur la spécialité:
			{{ speciality.label }}</h1>

		<table class="table table-striped">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ speciality.id }}</td>
				</tr>
				<tr>
					<th>Libellé</th>
					<td>{{ speciality.label }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ speciality.description }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_speciality_index') }}" class="btn btn-secondary">Retour à la liste des spécialités</a>

		<a href="{{ path('app_speciality_edit', {'id': speciality.id}) }}" class="btn btn-primary">Modifier</a>

		{# {{ include('speciality/_delete_form.html.twig') }} #}
	</div>

{% endblock %}
